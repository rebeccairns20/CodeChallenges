    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>    
    
    <title>Document</title>  
    <script>
        const VowelFind = () => {
            let input = document.getElementById("inputVal").value;
            let arr = ["a", "e", "i", "o", "u"];
            let numOfV = 0;
            input = input.split("");
            for(let inc = 0; inc < input.length; inc++){
                for(let inc2 = 0; inc2 < 5; inc2++){
                    
                    if(arr[inc2] == input[inc]){
                        numOfV += 1;
                    }
                }
            }
            document.getElementById("printer").innerHTML =  numOfV;
        } 

    </script>

</head>
<body>

    <div class="jumbotron container">
        <h1 class="display-4  container">Vowel Counter</h1>
        <p class="lead  container">Find The Number of Vowels</p>
        <input type="text" id="inputVal" style="margin-bottom: 10px;">
        <p class="lead  container">
            <a class="btn btn-primary btn-lg" onclick="VowelFind()" role="button">Find Number of Vowels</a>
        </p>
        <p id="printer" class="container"></p>
      </div>
</body>
