<body>
    <div class="container" style="padding-top: 20px;">
        <div class="jumbotron">
            <h1 class="display-4">Palindrome Checker</h1>
            <div class="container" style="padding-left: 15vw;">   
                <label class="lead">Please Enter A Word:</label> <br>
            </div>     
            <div class="container" style="padding-left: 15vw;">    
                <input  type="text" id="inputWord"> <br>
            </div>     
            <div class="container" style="padding-left: 15vw;">
                <button class="btn btn-primary" onclick="isPal()">Check</button> <br>
            </div>     
            <div class="container" style="padding-left: 15vw;">    
                <small id="answer"></small>
            </div> 
          </div>
    </div>
    
