        function isAnag(){
            let Word1 = document.getElementById("inputAnag1").value.toLowerCase().split('').sort();
            let Word2 = document.getElementById("inputAnag2").value.toLowerCase().split('').sort();
            document.getElementById("answer2").innerHTML = (Word1.toString() == Word2.toString() ? "That is an anagram" : "That is not an anagram");
        }
  
