    <div class="container" style="padding-top: 20px;">
        <div class="jumbotron">
            <h1 class="display-4">Fibonacci Checker</h1>
            <div class="container" style="padding-left: 15vw;">   
                <label class="lead">Please Enter A Number:</label> <br>
            </div>     
            <div class="container" style="padding-left: 15vw;">    
                <input  type="text" id="inputWordFib"> <br>
            </div>     
            <div class="container" style="padding-left: 15vw;">
                <button class="btn btn-primary" onclick="findFib()">Find</button> 
                <br>
            </div>     
            <div class="container" style="padding-left: 15vw;">    
                <small id="answer3" class="text-primary"></small>
            </div> 
          </div>
